{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "CommonJS"
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn",
    ".devcontainer",
    ".github"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": ["node"]
  }
}
